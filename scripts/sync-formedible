#!/bin/bash

# Sync Formedible Script
# Usage: scripts/sync-formedible

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

log_info() {
  echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
  echo -e "${GREEN}[SUCCESS]${NC} $1"
}

log_error() {
  echo -e "${RED}[ERROR]${NC} $1"
}

echo "ðŸ”„ Formedible Sync"
echo "=================="

# Ensure we're in the right directory
if [[ ! -f "package.json" ]]; then
  log_error "package.json not found. Please run this script from the project root."
  exit 1
fi

# Change to web app directory
cd apps/web

log_info "Installing formedible components using shadcn CLI..."

# Remove existing formedible components
log_info "Removing existing formedible components..."
rm -rf "src/components/formedible"
rm -rf "src/hooks/use-formedible.tsx"
rm -rf "src/lib/formedible"

# Install formedible using shadcn CLI with file path
log_info "Installing formedible from built registry..."
npx shadcn@latest add "../../packages/formedible/public/r/use-formedible.json" --overwrite

# Install formedible builder using shadcn CLI with file path
log_info "Installing formedible builder from built registry..."
npx shadcn@latest add "../../packages/builder/public/r/form-builder.json" --overwrite

# Return to project root
cd ../..

log_success "Formedible sync complete! ðŸŽ‰"