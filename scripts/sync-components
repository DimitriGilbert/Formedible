#!/bin/bash

# Sync Components Script
# Usage: scripts/sync-components

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Configuration
WEB_COMPONENTS_DIR="apps/web/src/components"
WEB_HOOKS_DIR="apps/web/src/hooks"
WEB_LIB_DIR="apps/web/src/lib"

# Functions
log_info() {
  echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
  echo -e "${GREEN}[SUCCESS]${NC} $1"
}

log_warning() {
  echo -e "${YELLOW}[WARNING]${NC} $1"
}

log_error() {
  echo -e "${RED}[ERROR]${NC} $1"
}

update_web_components() {
  log_info "Installing formedible components using shadcn CLI..."
  
  # FORCE CLEAN - remove all existing files first
  log_info "Cleaning existing formedible components..."
  rm -rf apps/web/src/components/formedible/
  rm -f apps/web/src/hooks/use-formedible.tsx
  rm -f apps/web/src/lib/formedible/types.ts
  
  # Change to web app directory
  cd apps/web

  # Install ai-builder components FIRST if registry exists
  if [[ -f "../../packages/ai-builder/public/r/ai-builder.json" ]]; then
    log_info "Installing ai-builder from built registry..."
    npx shadcn@latest add --yes --overwrite "../../packages/ai-builder/public/r/ai-builder.json"
  else
    log_warning "AI Builder registry not found, skipping ai-builder installation"
  fi
  
  # Install builder components SECOND if registry exists
  if [[ -f "../../packages/builder/public/r/form-builder.json" ]]; then
    log_info "Installing form-builder from built registry..."
    npx shadcn@latest add --yes --overwrite "../../packages/builder/public/r/form-builder.json"
  else
    log_warning "Builder registry not found, skipping builder installation"
  fi
  
  # Install formedible LAST using shadcn CLI with file path
  log_info "Installing formedible from built registry..."
  npx shadcn@latest add --yes --overwrite "../../packages/formedible/public/r/use-formedible.json"
  
  
  # Return to project root
  cd ../..
  
  log_success "Web app components updated using shadcn CLI"
}

update_registry() {
  log_info "Updating registry files..."
  
  # Copy formedible registry to web app public directory (for build output)
  if [[ -f "packages/formedible/public/r/use-formedible.json" ]]; then
    mkdir -p "apps/web/public/r"
    cp "packages/formedible/public/r/use-formedible.json" "apps/web/public/r/use-formedible.json"
    log_success "Formedible registry updated in web app"
  else
    log_error "Formedible registry file not found in packages/formedible/public/r/use-formedible.json"
    exit 1
  fi
  
  # Copy builder registry to web app public directory (if it exists)
  if [[ -f "packages/builder/public/r/form-builder.json" ]]; then
    mkdir -p "apps/web/public/r"
    cp "packages/builder/public/r/form-builder.json" "apps/web/public/r/form-builder.json"
    log_success "Builder registry updated in web app"
  else
    log_warning "Builder registry file not found in packages/builder/public/r/form-builder.json (this is optional)"
  fi
  
  # Copy ai-builder registry to web app public directory (if it exists)
  if [[ -f "packages/ai-builder/public/r/ai-builder.json" ]]; then
    mkdir -p "apps/web/public/r"
    cp "packages/ai-builder/public/r/ai-builder.json" "apps/web/public/r/ai-builder.json"
    log_success "AI Builder registry updated in web app"
  else
    log_warning "AI Builder registry file not found in packages/ai-builder/public/r/ai-builder.json (this is optional)"
  fi
}

# Main execution
main() {
  echo "ðŸ”„ Formedible Component Sync"
  echo "============================"
  
  # Ensure we're in the right directory
  if [[ ! -f "package.json" ]]; then
    log_error "package.json not found. Please run this script from the project root."
    exit 1
  fi
  
  # Check if package components exist
  if [[ ! -d "packages/formedible/src/components/formedible/fields" ]]; then
    log_error "Package components not found. Please build the package first."
    exit 1
  fi
  
  update_web_components
  update_registry
  
  log_success "Component sync complete! ðŸŽ‰"
}

# Run main function
main "$@"